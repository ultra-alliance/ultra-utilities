{
  "name": "@uta/ultra-utilities",
  "private": true,
  "license": "MIT",
  "scripts": {
    "install:all": "lerna bootstrap",
    "clean": "rimraf coverage && lerna run clean",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "lint:staged": "lint-staged",
    "check:types": "lerna run check-types",
    "build": "lerna run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage:pre": "rimraf coverage",
    "coverage": "jest --coverage",
    "commit": "git-cz",
    "release:check": "lerna changed",
    "release:latest": "lerna publish --yes --conventional-commits --create-release github --message 'chore(release): publish [ci skip]'",
    "release:canary": "lerna publish --canary --ignore-scripts",
    "prepare": "husky install",
    "make:docs": "npx typedoc --out docs packages/ultra-sdk/src/index.ts"
  },
  "workspaces": [
    "packages/*"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branch": "main"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@commitlint/config-lerna-scopes": "^17.4.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^0.56.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-watch-typeahead": "^2.2.2",
    "lerna": "^6.6.1",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.0.5",
    "typedoc": "^0.23.28",
    "typescript": "^5.0.3",
    "xo": "^0.53.1"
  }
}
