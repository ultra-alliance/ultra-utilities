{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "outDir": "./dist/esm",
    "rootDir": "src",
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowJs": true,
    "skipLibCheck": true,
    "lib": ["es2017", "es2018", "es2019", "es2020", "dom"],
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types",
      "./src/index.d.ts "
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts", "jest.config.js"]
}
